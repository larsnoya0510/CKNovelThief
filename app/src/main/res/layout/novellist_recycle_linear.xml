<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="1dp"
              android:background="@android:color/background_light">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDark"
            android:layout_margin="1dp" android:divider="@drawable/layourshape"
            android:showDividers="middle|beginning|end">
        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/iv_icon" android:background="@color/colorDark"
                android:scaleType="fitCenter" android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ll_item" android:background="@color/colorDark">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_name" android:textSize="24sp"
                    android:textAllCaps="false" android:shadowColor="@android:color/darker_gray"
                    android:textStyle="bold" android:textColor="@android:color/background_light" android:maxLines="2"
                    android:layout_margin="2dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/tv_desc" android:textSize="18sp"
                    android:visibility="gone" android:background="@color/colorDark"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
