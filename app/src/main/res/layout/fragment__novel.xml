<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment_Novel" android:id="@+id/fl_fragment_Novel">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Activity_NovelShow" android:orientation="vertical">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_nowHtml" android:textColor="@color/colorWhite" android:freezesText="true"
                android:enabled="false" android:editable="false" android:layout_margin="2dp"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/mScrollView" android:layout_margin="3dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="讀取中..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tv_webContent" android:textSize="24sp"
                        android:scrollbars="vertical" android:singleLine="false" android:textColor="@color/colorWhite"
                        android:background="@color/colorDark" android:freezesText="true"
                        android:layout_margin="3dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>